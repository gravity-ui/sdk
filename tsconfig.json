{
  "extends": "@gravity-ui/tsconfig/tsconfig",
  "compilerOptions": {
    "target": "es2022",
    "allowJs": true,
    "outDir": "build/esm",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "importHelpers": true,
    "verbatimModuleSyntax": true,
    "declaration": true
  },
  "include": [
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib/**/*.test.ts",
    "lib/__mocks__"
  ]
}